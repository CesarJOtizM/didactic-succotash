{
	"name": "didactic-succotash",
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"dev": "next dev --turbopack",
		"build": "next build",
		"start": "next start",
		"lint": "eslint 'src/**/*.{js,jsx,ts,tsx}' --ext .js,.jsx,.ts,.tsx",
		"lint:ts": "eslint 'src/**/*.{ts,tsx}' --ext .ts,.tsx",
		"lint:css": "stylelint 'src/**/*.{css,scss}'",
		"prepare": "husky",
		"format": "prettier --write .",
		"fix:lint": "eslint 'src/**/*.{js,jsx,ts,tsx}' --ext .js,.jsx,.ts,.tsx --fix",
		"fix:css": "stylelint 'src/**/*.{css,scss}' --fix",
		"test": "jest",
		"db:generate": "prisma generate --schema=src/prisma/schema.prisma",
		"db:push": "prisma db push --schema=src/prisma/schema.prisma",
		"db:migrate": "prisma migrate deploy --schema=src/prisma/schema.prisma",
		"db:migrate:dev": "prisma migrate dev --schema=src/prisma/schema.prisma",
		"db:seed": "bunx tsx src/lib/db/seed.ts",
		"db:reset": "prisma migrate reset --schema=src/prisma/schema.prisma --force",
		"db:studio": "prisma studio --schema=src/prisma/schema.prisma",
		"db:init": "npm run db:generate && npm run db:push",
		"docker:up": "docker compose up -d",
		"docker:down": "docker compose down",
		"docker:build": "docker compose build",
		"docker:logs": "docker compose logs -f",
		"docker:restart": "docker compose restart",
		"docker:clean": "docker compose down -v --remove-orphans",
		"docker:dev": "docker compose up --build",
		"docker:setup": "docker compose up -d && echo 'ðŸŽ‰ AplicaciÃ³n iniciada! Ve a http://localhost:3000 para la app y http://localhost:8080 para PGAdmin'"
	},
	"dependencies": {
		"@prisma/client": "^6.9.0",
		"@prisma/extension-accelerate": "^2.0.1",
		"next": "15.3.3",
		"prisma": "^6.9.0",
		"react": "^19.1.0",
		"react-dom": "^19.1.0",
		"tsx": "^4.19.4"
	},
	"devDependencies": {
		"@eslint/eslintrc": "^3",
		"@eslint/js": "^9.28.0",
		"@tailwindcss/postcss": "^4",
		"@testing-library/dom": "^10.4.0",
		"@testing-library/jest-dom": "^6.6.3",
		"@testing-library/react": "^16.3.0",
		"@testing-library/react-hooks": "^8.0.1",
		"@types/bun": "latest",
		"@types/jest": "^29.5.14",
		"@types/node": "^22",
		"@types/react": "^19",
		"@types/react-dom": "^19",
		"@typescript-eslint/eslint-plugin": "^8.33.1",
		"@typescript-eslint/parser": "^8.33.1",
		"eslint": "^9",
		"eslint-config-next": "15.3.3",
		"eslint-config-prettier": "^10.1.5",
		"eslint-plugin-check-file": "^3.3.0",
		"eslint-plugin-import": "^2.31.0",
		"eslint-plugin-react": "^7.37.5",
		"husky": "^9.1.7",
		"jest": "^29.7.0",
		"jest-environment-jsdom": "^30.0.0-beta.3",
		"lint-staged": "^16.1.0",
		"prettier": "^3.5.3",
		"prettier-plugin-tailwindcss": "^0.6.12",
		"stylelint": "^16.20.0",
		"stylelint-config-standard": "^38.0.0",
		"stylelint-config-standard-scss": "^15.0.1",
		"stylelint-config-tailwindcss": "^1.0.0",
		"stylelint-order": "^7.0.0",
		"tailwindcss": "^4",
		"ts-node": "^10.9.2",
		"typescript": "^5"
	},
	"lint-staged": {
		"*.css": [
			"stylelint --fix"
		],
		"*.scss": [
			"stylelint --fix"
		],
		"*.js": [
			"eslint --fix",
			"prettier --write"
		],
		"*.ts": [
			"eslint --fix",
			"prettier --write"
		],
		"*.jsx": [
			"eslint --fix",
			"prettier --write"
		],
		"*.tsx": [
			"eslint --fix",
			"prettier --write"
		]
	}
}
